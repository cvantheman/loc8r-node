extends layout

block content
  .row.page-header
    .col-lg-12
      h1= header
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/location", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name")= nameLabel
          .col-xs-12.col-sm-10
            input#name.form-control(name="name")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="rating")= ratingLabel
          .col-xs-12.col-sm-2
            select#rating.form-control.input-sm(name="rating")
              each rating in ratings
                option #{rating}
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="review")= reviewLabel
          .col-sm-10
            textarea#review.form-control(name="review", rows="5")
        button.btn.btn-default.pull-right= addReviewButton
    .col-xs-12.col-md-4